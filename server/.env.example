# Environment Configuration
NODE_ENV=development

# Server Port
PORT=5000

# MongoDB Connection String
# Replace with your MongoDB Atlas connection string
# Format: mongodb+srv://<username>:<password>@<cluster-url>/<database-name>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/mern-blog?retryWrites=true&w=majority

# JWT Secret Key
# Generate a secure random string: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production

# JWT Token Expiration
JWT_EXPIRE=30d